{
  "name": "controlcubiertas",
  "version": "1.2.0",
  "description": "Aplicaci√≥n de escritorio para ControlCubiertas",
  "author": "Patricio Pittana",
  "main": "desktop/main.js",
  "scripts": {
    "build-react": "cd frontend && npm run build:electron",
    "build-desktop": "dotenv -e .env -- electron-builder",
    "build": "npm run build-react && npm run build-desktop",
    "electron:start": "electron desktop/main.js",
    "electron:build": "electron-builder",
    "electron": "electron ."
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "electron": "^34.4.1",
    "dotenv-cli": "^8.0.0",
    "electron-builder": "^24.4.0"
  },
  "build": {
    "appId": "com.TMBC.controlcubiertas",
    "productName": "Control Cubiertas",
    "publish": {
      "provider": "github",
      "owner": "Lunatico0",
      "repo": "controlCubiertas"
    },
    "files": [
      "desktop/**/*",
      "node_modules/**/*",
      "package.json",
      "!../backend",
      "splash.html",
      "TMBC.png"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "desktop"
    },
    "asar": true,
    "win": {
      "icon": "desktop/TMBC.ico",
      "target": "nsis",
      "artifactName": "Control-Cubiertas-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "electron-log": "^5.4.1",
    "electron-updater": "^6.6.2"
  }
}
